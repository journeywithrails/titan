<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
<title>Labtitan Admin Login</title>
<%= stylesheet_link_tag 'admin_login' %>
<script src="/javascripts/login.js" type="text/javascript"></script>
</head>
<body>


			<% form_for :admin,  :url => { :controller => :users,:action => :login}, 
                              :html => {:name=> 'appl_form', :onSubmit=>'return valid();'} do  %>	
           <table align="center" width="735" height="355px" border="0" cellspacing="0" cellpadding="0" bgcolor="#ffffff">
		   
		   
		    <tr>
              <td valign="top">
	            <table width="735" border="0" cellspacing="0" cellpadding="0">
                <tr>
                 <td width="14px" height="355px"><img src="/images/login-left.gif" width="14" height="355" /></td>
                   <td width="21px">&nbsp;</td>
                   <td><table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                   <td style="background:url(/images/bg_middle.gif);  background-repeat:repeat-x; height:297px;">
			       <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                <td height="45px">&nbsp;</td>
                <td>&nbsp;</td>
              </tr>
              <tr>
                <td width="290px" align="center"><img src="/images/lock.gif" width="216" height="216" /></td>
                <td valign="top">
				<table width="100%" border="0" cellspacing="0" cellpadding="0">
                  <tr>
                    <td align="right"><img src="/images/img-heading.gif" width="363" height="29" /></td>
                  </tr>
                  <tr>
                    <td height="40px">			
					

                    <% if flash[:login_confirmation] %>
                    <div  style ="color:#ff0000; font-family:arial; font-size:12px; text-align:center;">
					<%= flash[:login_confirmation] %></div><% end %></td>
                  </tr>
                  <tr>
                    <td>
					
					<table align="right" width="250" border="0" cellspacing="0" cellpadding="0" >
                      <tr>
                        <td height="27" align="left">
						<input class="usernamepassword" name='username' value="Email ID" id="username" type="text" onKeyUp="if(event.keyCode==13) showOptions();" onFocus="if(this.value=='Email ID') this.value='';" onBlur="if(this.value=='') this.value='Email ID';" />
						
						</td>
                        <td rowspan="3" align="left" width="30">&nbsp;</td>
                      </tr>
                      <tr>
                        <td height="27" align="left">
						
										<input class="usernamepassword" name='password' value="Password" id="password" type="password" onKeyUp="if(event.keyCode==13) showOptions();" onFocus="if(this.value=='Password') this.value='';" onBlur="if(this.value=='') this.value='Password';" /></td>
					                        </tr>
                     
					 
					 
					 
					 
					 
					  
					  
                      <tr>
                        <td align="left" height="27"><input type="image" alt="Login" src="/images/but-login.gif" ></td>
                        </tr>
                    </table>
					
					
					</td>
                  </tr>
                </table></td>
              </tr>
            </table></td>
            </tr>
        </table></td>
        <td width="24px"></td>
      </tr>
    </table></td>
  </tr>
		   
          
</table>
<% end %>
</body>
</html>
