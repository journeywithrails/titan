                  <td>&nbsp;</td>
                  <td>&nbsp;</td>
                  <td>&nbsp;</td>
                  <td>&nbsp;</td>
                  <td  align="center">
                  <td>
                    <input src="/images/submit1.jpg" value="Send" type="image"></td>
					
                  <td><%= link_to image_tag("/images/cancel1.jpg",:style=>"border:none", :title => "Cancel"), :action => "index" %> </td>
                </tr>
              </table>
            </div>
 
 
 
 
 
 
 <% end %>